# Base URL for the existing chat service that powers completions and citations.
CHAT_API_URL="http://127.0.0.1:6060/api/chat"

# Azure OpenAI endpoint configuration (mirrors /chat service requirements).
AZURE_OPENAI_ENDPOINT="https://example.openai.azure.com"
AZURE_OPENAI_API_KEY="local-dev-key"
AZURE_OPENAI_DEPLOYMENT="local-dev-deployment"
AZURE_OPENAI_API_VERSION="2024-08-01-preview"

# Public URL where the widget server is reachable. Used for callbacks and CORS.
WIDGET_BASE_URL="http://127.0.0.1:3003"

# Comma separated list of allowed origins that may issue browser requests.
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://127.0.0.1:3000,http://127.0.0.1:3001,http://127.0.0.1:3002,http://127.0.0.1:3003"

# Optional Redis connection (Upstash compatible) for server-side memory.
REDIS_URL=""
REDIS_TOKEN=""

# Enables Redis backed memory when set to "true" (case insensitive).
SERVER_MEMORY_ENABLED="false"

# Persistent session cookie configuration.
SESSION_COOKIE_NAME="cw_session"
SESSION_COOKIE_SECRET="d6f105f8fd04401fb8f6f04b1f4c4efb"
SESSION_COOKIE_MAX_AGE_DAYS="30"

# Enables verbose logging (avoid enabling in production).
LOG_PII="false"
